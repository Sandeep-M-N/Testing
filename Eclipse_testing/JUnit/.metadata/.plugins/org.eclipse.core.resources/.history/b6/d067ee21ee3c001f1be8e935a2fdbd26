package io.cal;

public class CalculatorProject {

	public int add(int a,int b) {
		return (a+b);
	}
	
	public int sub(int a,int b) {
		return (b-a);
	}
	
	public int mul(int a,int b) {
		return (a*b);
	}
	public int div(int a,int b) {
		return (a/b);
	}
	
	public double areaofcircle(int r) {
		return Math.PI*r*r;
	}
	public boolean postive(int a) {
		if(a>0) {
			return true;
		}
		else {
			return false;
		}
	}
	
}
